<h1>Listing items</h1>

<table>
  <tr>
    <th>Done</th>
    <th>Priority</th>
    <th>Description</th>
    <th>Due date</th>
    <th>Category</th>
    <th>Note</th>
    <th>Private</th>
  </tr>

<% for item in @items %>
  <tr>
    <td><%=h item.done %></td>
    <td><%=h item.priority %></td>
    <td><%=h item.description %></td>
    <td><%=h item.due_date %></td>
    <td><%=h item.category_id %></td>
    <td><%=h item.note_id %></td>
    <td><%=h item.private %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>
